<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }

      .form-button {
        background-color: #3b82f6;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        font-weight: bold;
      }

      .form-button:hover {
        background-color: #2563eb;
      }
    </style>
  </head>
  <body>
    <div style="padding: 20px; margin-top: 30px; height: 1500px">
      <h1>View Blog Detail</h1>
      <table>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>State</th>
        </tr>
        <% blogs.forEach(function(blog) { %> <% if (blog.state === "draft") { %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.body %></td>
          <td>
            <%= blog.state %> &nbsp; &nbsp;
            <form
              action="/views/blog/<%= blog._id %>?_method=PUT"
              method="POST"
            >
              <input
                type="submit"
                name=""
                value="Change State"
                id=""
                class="form-button"
              />
            </form>
          </td>
        </tr>
        <% } %> <% }); %>
      </table>
      <div style="margin-top: 20px">
        <div class="social-icons">
          <a href="/views/blog" class="go-home">Go Back Home</a>
        </div>
      </div>
    </div>
  </body>
</html>
